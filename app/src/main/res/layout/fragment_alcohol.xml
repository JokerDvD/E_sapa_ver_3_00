<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.admin.e_sapa_ver_3_00.Fragments.alcohol">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:id="@+id/alco_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="326px"
                android:layout_height="139px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:background="@drawable/background_with_shadow_backround"
                android:src="@drawable/akscis_rk_1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/captcha_image"
                >

                <com.wrapp.floatlabelededittext.FloatLabeledEditText
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    >

                    <EditText
                        android:id="@+id/alco_series_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:ems="10"
                        android:focusable="true"
                        android:gravity="center"
                        android:hint="@string/alco_text_info_2"
                        android:inputType="textPersonName"
                        android:maxLength="10"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/ET_inserting_text_color"
                        android:textColorHint="@color/ET_divider_color"
                        android:textSize="@dimen/abc_text_size_medium_material" />
                </com.wrapp.floatlabelededittext.FloatLabeledEditText>
            </RelativeLayout>


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/alco_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/alco_header"
            >

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:orientation="horizontal">

                <com.wrapp.floatlabelededittext.FloatLabeledEditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/alco_part1a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_marginRight="10dp"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="@string/alco_part1"
                        android:inputType="number"
                        android:maxLength="5"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/ET_inserting_text_color"
                        android:textColorHint="@color/ET_divider_color"
                        android:textSize="@dimen/abc_text_size_medium_material" />
                </com.wrapp.floatlabelededittext.FloatLabeledEditText>


                <com.wrapp.floatlabelededittext.FloatLabeledEditText
                    android:layout_width="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/alco_part2a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="@string/alco_part2"
                        android:inputType="number"
                        android:maxLength="5"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/ET_inserting_text_color"
                        android:textColorHint="@color/ET_divider_color"
                        android:textSize="@dimen/abc_text_size_medium_material" />
                </com.wrapp.floatlabelededittext.FloatLabeledEditText>


                <com.wrapp.floatlabelededittext.FloatLabeledEditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"

                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/alco_part3a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="@string/alco_part3"
                        android:inputType="number"
                        android:maxLength="5"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/ET_inserting_text_color"
                        android:textColorHint="@color/ET_divider_color"
                        android:textSize="@dimen/abc_text_size_medium_material" />

                </com.wrapp.floatlabelededittext.FloatLabeledEditText>

            </LinearLayout>


            <RelativeLayout
                android:id="@+id/alco_relat_layout_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:id="@+id/alco_captcha_image"
                    android:layout_width="180px"
                    android:layout_height="60px"
                    android:layout_below="@+id/textView2"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/logo_main"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/alco_text_info_3"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/Main_text_color"
                    android:textSize="@dimen/abc_text_size_medium_material" />

                <com.wrapp.floatlabelededittext.FloatLabeledEditText
                    android:id="@+id/view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </com.wrapp.floatlabelededittext.FloatLabeledEditText>

                <com.rey.material.widget.Button
                    android:id="@+id/alco_button"
                    style="Material.Drawable.Ripple.Touch.Light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/progress_view"
                    android:layout_marginTop="68dp"
                    android:layout_toEndOf="@+id/view"
                    android:layout_toRightOf="@+id/view"
                    android:text="@string/comm_btn_find"
                    android:textColor="@color/BTN_text_color"
                    android:textSize="@dimen/abc_text_size_medium_material"
                    app:rd_enable="true"
                    app:rd_rippleType="wave" />

                <com.github.rahatarmanahmed.cpv.CircularProgressView
                    android:id="@+id/progress_view"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_below="@+id/alco_captcha_image"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="5dp"
                    app:cpv_animAutostart="true"
                    app:cpv_indeterminate="true" />

                <com.wrapp.floatlabelededittext.FloatLabeledEditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/progress_view"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/alco_captcha_text"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/progress_view"
                        android:ems="10"
                        android:hint="@string/alco_text_info_4"
                        android:inputType="textPersonName"
                        android:maxLength="7"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/ET_inserting_text_color"
                        android:textColorHint="@color/ET_divider_color"
                        android:textSize="@dimen/abc_text_size_medium_material" />
                </com.wrapp.floatlabelededittext.FloatLabeledEditText>

            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/alco_response"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/alco_body">

            <ListView
                android:id="@+id/alco_list_view"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:visibility="gone"
                android:layout_margin="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/background_with_shadow_backround"
                android:cacheColorHint="@color/hint_text"
                android:divider="@color/divider"
                android:dividerHeight="2dp" />

            <!-- <TextView

                 android:id="@+id/alco_result"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentLeft="true"
                 android:layout_alignParentStart="true"
                 android:layout_below="@+id/alco_list_view"
                 android:layout_margin="10dp"
                 android:textAppearance="?android:attr/textAppearanceMedium" />
 -->

        </RelativeLayout>

    </RelativeLayout>
</ScrollView>
