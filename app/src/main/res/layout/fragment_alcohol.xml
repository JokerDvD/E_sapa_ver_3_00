<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.admin.e_sapa_ver_3_00.Fragments.alcohol">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:id="@+id/alco_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="@string/alco_text_info_1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/Main_text_color" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="326px"
                android:layout_height="139px"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/background_with_shadow_backround"
                android:src="@drawable/akscis_rk_1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/captcha_image"
                android:layout_marginTop="10dp">

                <com.rey.material.widget.EditText
                    android:id="@+id/alco_series_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:focusable="true"
                    android:hint="@string/alco_text_info_2"
                    android:inputType="textPersonName"
                    android:maxLength="10"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/ET_inserting_text_color"
                    android:textColorHint="@color/ET_divider_color"
                    app:et_dividerColor="@color/ET_divider_color"
                    app:et_dividerErrorColor="@color/ET_divider_error_color"
                    app:et_dividerHeight="2dp"
                    app:et_inputId="@+id/name_input"
                    app:et_supportMaxChars="3"
                    app:et_supportMode="charCounter" />
            </RelativeLayout>


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/alco_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/alco_header"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:orientation="horizontal">

                <com.rey.material.widget.EditText
                    android:id="@+id/alco_part1a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="@string/alco_part1"
                    android:inputType="number"
                    android:maxLength="5"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/ET_inserting_text_color"
                    android:textColorHint="@color/ET_divider_color"
                    app:et_dividerColor="@color/ET_divider_color"
                    app:et_dividerErrorColor="@color/ET_divider_error_color"
                    app:et_dividerHeight="2dp"
                    app:et_inputId="@+id/name_input2"
                    app:et_supportMaxChars="3"
                    app:et_supportMode="charCounter" />

                <com.rey.material.widget.EditText
                    android:id="@+id/alco_part2a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="@string/alco_part2"
                    android:inputType="number"
                    android:maxLength="5"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/ET_inserting_text_color"
                    android:textColorHint="@color/ET_divider_color"
                    app:et_dividerColor="@color/ET_divider_color"
                    app:et_dividerErrorColor="@color/ET_divider_error_color"
                    app:et_dividerHeight="2dp"
                    app:et_inputId="@+id/name_input3"
                    app:et_supportMaxChars="3"
                    app:et_supportMode="charCounter" />

                <com.rey.material.widget.EditText
                    android:id="@+id/alco_part3a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="@string/alco_part3"
                    android:inputType="number"
                    android:maxLength="5"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/ET_inserting_text_color"
                    android:textColorHint="@color/ET_divider_color"
                    app:et_dividerColor="@color/ET_divider_color"
                    app:et_dividerErrorColor="@color/ET_divider_error_color"
                    app:et_dividerHeight="2dp"
                    app:et_inputId="@+id/name_input4"
                    app:et_supportMaxChars="3"
                    app:et_supportMode="charCounter" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:text="@string/alco_text_info_3"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/Main_text_color" />

            <ImageView
                android:id="@+id/alco_captcha_image"
                android:layout_width="180px"
                android:layout_height="60px"
                android:layout_below="@+id/textView2"
                android:layout_centerHorizontal="true"
                android:background="@drawable/logo_main" />

            <com.rey.material.widget.EditText
                android:id="@+id/alco_captcha_text"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/alco_captcha_image"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:ems="10"
                android:hint="@string/alco_text_info_4"
                android:inputType="textPersonName"
                android:maxLength="7"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/ET_inserting_text_color"
                android:textColorHint="@color/ET_divider_color"
                app:et_dividerColor="@color/ET_divider_color"
                app:et_dividerErrorColor="@color/ET_divider_error_color"
                app:et_dividerHeight="2dp"
                app:et_inputId="@+id/name_input5"
                app:et_supportMode="charCounter" />

            <com.rey.material.widget.Button
                android:id="@+id/alco_button"
                style="Material.Drawable.Ripple.Touch.Light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/alco_captcha_text"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/comm_btn_find"
                android:textColor="@color/BTN_text_color"
                app:rd_enable="true"
                app:rd_rippleType="wave" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/alco_response"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/alco_body">

            <ListView
                android:id="@+id/alco_list_view"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_margin="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/background_with_shadow_backround"
                android:cacheColorHint="@color/hint_text"
                android:divider="@color/divider"
                android:dividerHeight="2dp"
                 />

            <TextView

                android:id="@+id/alco_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/alco_list_view"
                android:layout_margin="10dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />


        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
