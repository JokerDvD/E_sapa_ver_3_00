<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.e_sapa_ver_3_00.Fragments.settings">

    <!-- TODO: Update blank fragment layout -->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:id="@+id/set_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="@string/set_info_3"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/Main_text_color"
                android:textSize="@dimen/abc_action_bar_content_inset_material" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/set_body"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/set_header">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_margin="10dp"

                android:text="@string/set_info_4"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/Main_text_color"
                android:textSize="@dimen/abc_text_size_medium_material" />

            <Spinner
                android:id="@+id/set_lang_spinner"
                style="@style/Material.Widget.Spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView5"
                android:layout_gravity="center_horizontal"

                android:layout_margin="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:spinnerMode="dialog" />

            <TextView
                android:id="@+id/set_test_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"

                android:layout_below="@+id/set_lang_spinner"
                android:layout_margin="10dp"
                android:text="@string/set_info_1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/Main_text_color"
                android:textSize="@dimen/abc_text_size_medium_material" />

            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="wrap_content"
                android:layout_height="200sp"
                android:layout_alignEnd="@+id/set_lang_spinner"
                android:layout_alignLeft="@+id/set_test_text"
                android:layout_alignRight="@+id/set_lang_spinner"
                android:layout_alignStart="@+id/set_test_text"
                android:layout_below="@+id/set_test_text">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/set_test_text"
                    android:layout_alignStart="@+id/set_test_text"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/set_i_b"
                        android:layout_width="match_parent"
                        android:layout_height="40sp"
                        android:layout_alignLeft="@+id/set_test_text"
                        android:layout_alignStart="@+id/set_test_text"
                        android:layout_below="@+id/set_test_text"
                        android:layout_marginLeft="10sp"
                        android:layout_marginRight="10sp"
                        android:src="@drawable/ic_action"
                        style="@style/AppTheme" />

                    <ImageButton
                        android:id="@+id/set_i_b_2"
                        android:layout_width="match_parent"
                        android:layout_height="40sp"
                        android:layout_gravity="center_horizontal"

                        android:layout_margin="10sp"
                        android:src="@drawable/ic_action" />

                    <ImageButton
                        android:id="@+id/set_i_b_3"
                        android:layout_width="match_parent"
                        android:layout_height="40sp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="10sp"
                        android:layout_marginRight="10sp"
                        android:src="@drawable/ic_action" />

                    <ImageButton
                        android:id="@+id/set_i_b_4"
                        android:layout_width="match_parent"
                        android:layout_height="40sp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="10sp"
                        android:layout_marginRight="10sp"
                        android:src="@drawable/ic_action" />

                    <ImageButton
                        android:id="@+id/set_i_b_5"
                        android:layout_width="match_parent"
                        android:layout_height="40sp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="10sp"
                        android:layout_marginRight="10sp"
                        android:src="@drawable/ic_action" />

                    <ImageButton
                        android:id="@+id/set_i_b_6"
                        android:layout_width="match_parent"
                        android:layout_height="40sp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="10sp"
                        android:layout_marginRight="10sp"
                        android:src="@drawable/ic_action" />
                </LinearLayout>
            </ScrollView>

            <!--<ListView
                android:id="@+id/setting_list_view"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:layout_below="@+id/set_test_text"
                android:layout_margin="10dp" />-->


        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
