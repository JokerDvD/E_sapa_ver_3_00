<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.e_sapa_ver_3_00.Fragments.history">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:id="@+id/history_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="@string/history_info_Main"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/Main_text_color"
            android:textSize="36sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/history_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/history_header">


        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/history_spinner"
            android:layout_toStartOf="@+id/history_spinner"
            android:text="@string/history_info_1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/Main_text_color"
            android:textSize="23dp" />

        <com.rey.material.widget.Spinner
            android:id="@+id/history_spinner"
            style="@style/Material.Widget.Spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView7"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:textColor="@color/Main_text_color"
            android:textSize="24dp"
            app:rd_style="@style/Material.Drawable.Ripple.Wave"
            app:spn_arrowSwitchMode="@style/Material.Drawable.Ripple.Wave"
            app:spn_labelPadding="12dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView7"

            android:layout_margin="10dp"
            android:text="@string/history_info_2"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/Main_text_color"
            android:textSize="23dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView8"
            android:layout_centerHorizontal="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView8"
            android:layout_alignStart="@+id/textView8"

            android:layout_below="@+id/textView8"
            android:layout_margin="10dp"
            android:text="@string/history_info_3"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/Main_text_color"
            android:textSize="23dp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView9"
            android:layout_alignStart="@+id/textView9"
            android:layout_alignTop="@+id/textView10"
            android:layout_margin="10dp"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="24sp" />

        <RelativeLayout
            android:id="@+id/history_response"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView11">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"

                android:layout_margin="10dp"
                android:text="@string/history_info_4"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/Main_text_color"
                android:textSize="23dp" />

            <TextView
                android:id="@+id/history_data_of_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView12"
                android:layout_centerHorizontal="true"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/Main_text_color"
                android:textSize="23dp" />

            <fragment
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.MapFragment"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/history_body"
        android:orientation="horizontal">

        <com.rey.material.widget.Button
            android:id="@+id/history_btn_1"
            style="Material.Drawable.Ripple.Touch.Light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="@string/history_info_5"
            android:textColor="@color/BTN_text_color"
            app:rd_enable="true"
            app:rd_rippleType="wave" />

        <com.rey.material.widget.Button
            android:id="@+id/history_btn_2"
            style="Material.Drawable.Ripple.Touch.Light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="@string/history_info_5"
            android:textColor="@color/BTN_text_color"
            app:rd_enable="true"
            app:rd_rippleType="wave" />
    </LinearLayout>
</RelativeLayout>
